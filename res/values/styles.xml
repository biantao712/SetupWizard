    <style name="google_drive_button_text_style">
        <item name="android:textSize">@dimen/google_drive_button_text_size</item>
        <item name="android:textColor">@color/google_drive_button_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="phone_protect_description_text_style">
        <item name="android:textSize">@dimen/phone_protect_description_text_size</item>
        <item name="android:textColor">@color/phone_protect_description_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="dialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- add activity start&close animation -->
    <style name="Animation.SetupWizard" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_next_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_next_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_back_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_back_out</item>
    </style>
    
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    
    <style name="CustomSwitchTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/wifiswitchcheck_style</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="content_text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/asus_content_margin_left_right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="content_icon_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/asus_content_margin_left_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="edit_item">
        <item name="android:layout_height">@dimen/asus_content_height1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="lockPatternview">
        <item name="@*android:regularColor">@color/lock_pattern_view_regular_color</item>
        <item name="@*android:successColor">@color/lock_pattern_view_success_color</item>
        <item name="@*android:errorColor">@color/lock_pattern_view_error_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomRadioTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radio_style</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="head_title">
        <item name="android:textSize">@dimen/welcome_title_size</item>
        <item name="android:textColor">@color/bottommenu_background_color</item>
        <item name="android:fontFamily">droid-sans-fallback</item>
    </style>

    <style name="head_summary">
        <item name="android:textSize">@dimen/welcome_content_size</item>
        <item name="android:textColor">@color/bottommenu_background_color</item>
        <item name="android:fontFamily">droid-sans-fallback</item>
    </style>

    <style name="bottom_text">
        <item name="android:textSize">@dimen/welcome_content_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">droid-sans-fallback</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">@dimen/text_margin_bottom</item>
    </style>
    
    <style name="asus_inspire">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="Transparent" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <!--<item name="android:colorPrimaryDark">@color/asus_action_bottom_bar_color</item>-->
        <item name="android:colorAccent">?android:attr/colorPrimaryDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--将Activity的Theme设置成透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
