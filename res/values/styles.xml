<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="divider_1dp_height">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="divider_2dp_height">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2.0dip</item>
    </style>

    <style name="divider_2dp_height_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="dash_bar">
        <item name="android:background">@color/account_content_text_color</item>
        <item name="android:layout_width">5.0dip</item>
        <item name="android:layout_height">2.0dip</item>
    </style>

    <!-- Wi-Fi Settings, used in wifi_dialog.xml -->
    <style name="wifi_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="wifi_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="wifi_item_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="wifi_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- The theme that is customized for the Setupwizard layout -->
    <style name="SetupWizardTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <!--<item name="android:colorPrimaryDark">@color/asus_action_bottom_bar_color</item>-->
        <item name="android:colorAccent">?android:attr/colorPrimaryDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="SetupWizardTheme.ActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@color/background_color</item>
        <item name="android:titleTextStyle">@style/SetupWizardTheme.ActionBar.Text</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="SetupWizardTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <!-- The theme that is customized for SetupWizardDataCollectionFotaActivity -->
    <style name="SetupWizardDataCollectionFotaTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

