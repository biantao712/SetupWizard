                        android:singleLine="true"
                        android:inputType="textNoSuggestions"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/asus_content_margin_left_right"
                        android:textSize="@dimen/asus_actionbar_main_text_size"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/asus_divider_line"
                        android:layout_marginLeft="@dimen/asus_content_margin_left_right"
                        android:background="@color/asus_divider_area_color"
                        android:layout_alignParentBottom="true"/>
                 </RelativeLayout>

                 <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">
