                             android:layout_height="@dimen/asus_content_height2"
                             android:orientation="vertical"
                             android:layout_marginLeft="@dimen/asus_content_margin_left_right">

                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
